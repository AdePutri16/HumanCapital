<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".datadiriActivity">

    <!-- ScrollView untuk menggulirkan konten -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <!-- Layout utama di dalam ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1E3E62"
                android:padding="16dp"
                android:text="Data Diri"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Tombol Kembali"
                android:src="@drawable/panah_kembali"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="16dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle"
                android:contentDescription="Foto Profil"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeader" />

            <!-- Tombol Update Foto -->
            <Button
                android:id="@+id/btnUpdatePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Foto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="#FFB74D"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/imgProfile"
                android:layout_marginTop="16dp" />

            <!-- TableLayout -->
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:stretchColumns="1"
                app:layout_constraintTop_toBottomOf="@id/btnUpdatePhoto">

                <!-- Baris 1: NIP -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NIP"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvNip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="00234567"
                        android:layout_weight="1"
                        android:inputType="text" />
                </TableRow>

                <!-- Baris 2: Nama -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvNama"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ade Putri Bustan"
                        android:layout_weight="1"
                        android:inputType="text" />
                </TableRow>

                <!-- Baris 3: Tempat dan Tanggal Lahir -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tempat Tanggal Lahir"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvTempat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Parepare"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvTanggal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="16/01/2024"
                        android:layout_weight="1" />
                </TableRow>

                <!-- Baris 4: Jenis Kelamin -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvJenisKelamin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki/Perempuan"
                        android:layout_weight="1" />
                </TableRow>

                <!-- Baris 5: NIK -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NIK"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvNik"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Masukkan NIK"
                        android:inputType="number"
                        android:layout_weight="1" />
                </TableRow>

                <!-- Baris 6: NPWP -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NPWP"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvNpwp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Masukkan NPWP"
                        android:layout_weight="1" />
                </TableRow>

                <!-- Baris 7: Jabatan -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabatan"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvJabatan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Masukkan Jabatan"
                        android:layout_weight="1" />
                </TableRow>

                <!-- Baris 8: Telepon -->
                <TableRow
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telepon"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvTelepon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Masukkan Telepon"
                        android:layout_weight="1" />
                </TableRow>

                <!-- Baris 9: Email -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Masukkan Email"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>

            <!-- Button Edit -->
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tableLayout"
                android:backgroundTint="#FFB74D"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
